{
  "manifest_version": 3,
  "name": "Voice Samurai",
  "version": "1.0.0",
  "description": "Voice-controlled browser automation with AI-powered actions",
  "permissions": ["activeTab", "scripting", "storage", "webRequest"],
  "host_permissions": ["http://localhost:8000/*", "https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Voice Samurai"
  },
  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Alt+V"
      },
      "description": "Start/stop voice recording"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}